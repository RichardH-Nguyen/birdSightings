<h1>Bird Sightings</h1>

<div class="new-bird">

    <h2>Add a New Bird</h2>
    <div class="flash-info">
        {{#if messages}}
            <p class="info-message">{{messages.info}}</p>
        {{/if}}
    </div>

    <form method="POST" action="/addBird">
        <!-- all bird information gathered here -->
        Name:           <input name="name">                                     <br>
        Description:    <input name="description">                              <br>
        Average Eggs:   <input name="averageEggs" type="number">                <br>
        Endangered?     <input name="endangered" value="true" type="checkbox">  <br> <!--If checked: it is true -->
        Nest Materials: <input name="nestMaterials">                            <br>
        Nest Location:  <input name="nestLocation">                             <br>
        Height(cm):     <input name="height" type="number">                     <br>


        <button type="submit">Submit</button>
    </form>

    <div class="flash-errors">
        {{#if messages}}
            <p class="error-message">{{messages.error}}</p>
        {{/if}}
    </div>
</div>

<div class="bird-name-list">

    <h2>Bird List</h2>

    {{#each birds}}
        <h3>{{this.name}}</h3>
        <p>{{this.description}}</p>
        <p><a href="/bird/{{this.id}}">{{this.name}} info and sightings</a></p>
    {{else}}
        <p> No birds in the database</p>
    {{/each}}
</div>